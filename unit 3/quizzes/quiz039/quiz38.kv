MDScreen:
    size: 500,500

    MDBoxLayout:
        orientation: 'horizontal'
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .7,.3
        md_bg_color: 'red'

        MDLabel:
            id: counter_label
            text:"0"
            halign: "center"
            size_hint: .5,1
            font_size: '34pt'
            color: '#ffffff'
            md_bg_color: '#2E5266'

        MDRaisedButton:
            id: counter_btn
            text: "Add +1"
            size_hint: .5,1
            font_size: '34pt'
            md_bg_color: '#E2C044'
            on_release:
                app.click()