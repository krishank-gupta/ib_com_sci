MDScreen:
    size: 800,800
    md_bg_color: '#F1FAEE'  

    MDBoxLayout:
        orientation: 'vertical'
        size_hint: .9,.9
        pos_hint: {'center_x': .5,'center_y': .5}

        MDBoxLayout:
            size_hint: 1,.2
            orientation: 'vertical'

            MDLabel:
                id:main_title
                font_style: "H3"
                text: 'Tic Tac Toe by Krish'
                color: "#1D3557"
                halign: 'center'


            MDLabel:
                id:turn_msg
                font_style: "H5"
                text: "Player X's Turn"
                color: "#1D3557"
                halign: 'center'

        MDBoxLayout:
            size_hint: 1,.7 
            orientation: 'vertical'

            MDBoxLayout:
                orientation: 'horizontal'
                
                MDRaisedButton:
                    id: btn1
                    text: ""
                    size_hint: 1,1
                    md_bg_color: "#A8DADC"
                    on_press: app.play(1) 

